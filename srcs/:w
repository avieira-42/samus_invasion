#include "../includes/so_long.h"       

char    **read_map(t_game *game)
{
	int		fd;
	char	**map;
	char	*line;
	char	*map_buffer;
	char	*map_holder;

	fd = open(game->map.file_name, O_RDONLY);
	if (fd == -1)
		return (NULL);
	map_holder = ft_strdup("");
	while (1)
	{
		line = get_next_line(fd);
		if (!line)
			break ;
		map_buffer = map_holder;
		map_holder = ft_strjoin(map_buffer, line);
		free(line);
		free(map_buffer);
	}
	map = ft_split(map_holder, '\n');
	free(map_holder);
	close(fd);
	game->map.text = map;
}

void	get_map_height(t_game *game)
{
	while (*map++)
		t_game->map.height++;
}

void	get_map_width(t_game *game)
{
	game->map.width = strlen(*map);
}

void	is_only_1(t_game *game)
{
	while (*map_line)
		if (*map_line++ != '1')
			return (0);
	return (1);
}

int	is_surrounded_by_1(char **map)
{
	int	i;

	i = 0;
	while (*map)
	{
		if (*map[0] != '1' || *map[map_width - 1] != '1')
			return (0);
		if (i == 0 || i == map_height)
			if (!is_only_1(*map))
				return (0);
		i++;
		map++;
	}
	return (1);
}

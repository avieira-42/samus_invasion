#include "../includes/so_long.h"

int	contiguous_ceiling(t_game *game, t_point floor_pos)
{
	t_tile *walls;

	walls = game->walls;
	while (walls)
	{
		if (floor_pos.y <= walls->pos.y + TILE_SIZE_Y + 5
			&& floor_pos.y >= walls->pos.y + TILE_SIZE_Y
			&& floor_pos.x == walls->pos.x)
			return (1);
		walls = walls->next;
	}
	return (0);
}

int	contiguous_floor(t_game *game, t_point ceiling_pos)
{
	t_tile *walls;

	walls = game->walls;
	while (walls)
	{
		if (ceiling_pos.y >= walls->pos.y - 5
			&& ceiling_pos.y >= walls->pos.y
			&& ceiling_pos.x == walls->pos.x)
			return (1);
		walls = walls->next;
	}
	return (0);
}
